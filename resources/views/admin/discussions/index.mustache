<html>
  <head>
    <title>Clorum Admin</title>
  </head>

  <body>
    <div class="container">
      <h1>Discussions Listing</h1>

      <a href="/discussions/new">Start new discussion</a>

      <ol>
      {{#discussions}}
        <li>[ <a href="/admin/discussions/{{id}}/edit">Edit</a> | <a href="/admin/discussions/{{id}}/delete">Delete</a> ] <a href="discussions/{{id}}"><strong>{{title}}</strong></a> by <em>{{author}}</em> in <a href="/categories/{{category}}">{{category}}</a>, at {{created}}</li>
      {{/discussions}}
      </ol>
    </div>
  </body>
</html>
