{{> header}}

      <h2>All discussions in {{category}}</h2>

      <div class="row no-margin">
        <div class="col-md-5">
          Discussion name
        </div>
        <div class="col-md-4">
          Started by
        </div>
        <div class="col-md-3">
          Creation date
        </div>
      </div>

      {{#discussions}}
      <div class="row no-margin">
        <div class="col-md-5">
          <a href="/discussions/{{id}}">{{title}}</a>
        </div>
        <div class="col-md-4">
          {{author}}
        </div>
        <div class="col-md-3">
          {{created}}
        </div>
      </div>
      {{/discussions}}

{{> footer}}
