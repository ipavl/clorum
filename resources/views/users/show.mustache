{{#user}}
<html>
  <head>
    <title>Viewing profile: {{username}} - Clorum</title>
  </head>

  <body>
    <div class="container">
      <h1>{{username}}</h1>

      <a href="/">Home</a> | <a href="/users/{{id}}/edit">Edit</a>

      <p class="profile registered">Member since: {{registered}}</p>

      <h3>Bio</h3>
      <p class="profile bio">{{bio}}</p>

      <h3>Discussions</h3>
      {{#discussions}}
      <li><div class="profile item">{{created}}: <a href="/discussions/{{id}}">{{title}}</a></div></li>
      {{/discussions}}

      <h3>Replies</h3>
      {{#replies}}
      <li><div class="profile item">{{created}}: <a href="/discussions/{{parent}}">{{content}}</a></div></li>
      {{/replies}}
    </div>
  </body>
</html>
{{/user}}
