{{> header}}

      <h1>User Registration</h1>

      <form action="/users/register/create" method="post" class="form-group">
        <label for="username">Username</label>
        <input name="username" class="form-control" /><br />

        <label for="password">Password</label>
        <input name="password" type="password" class="form-control" /><br />

        <label for="email">Email</label>
        <input name="email" type="email" class="form-control" /><br />

        <label for="bio">Bio (max: 255 characters)</label><br />
        <textarea name="bio" columns="100" cols="50" rows="4" maxlength="255" class="form-control"></textarea><br />

        <input type="submit" value="Register" class="form-control" />
      </form>

{{> footer}}
